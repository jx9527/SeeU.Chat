<?xml version="1.0" encoding="utf-8"?>
<jiguang.chat.view.MatchView android:id="@+id/match_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#FFE8EDF3">

        <RelativeLayout
            android:id="@+id/lplp"
            android:layout_width="match_parent"
            android:layout_height="48.5dp"
            android:background="@color/red">

            <ImageButton
                android:id="@+id/seeu_return"
                android:layout_width="@dimen/title_bar_height"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/jmui_back_btn_bg"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/seeu_return"
                android:text="SeeU"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/opop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lplp">

            <ImageButton
                android:id="@+id/list_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_1" />

            <ImageButton
                android:id="@+id/refresh_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/refresh_1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/match_bar_btm"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/rect1_1"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:background="@drawable/rectangle" />

                <ImageView
                    android:id="@+id/rect1_2"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rectangle" />

                <ImageView
                    android:id="@+id/rect1_3"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rectangle" />

                <ImageView
                    android:id="@+id/rect1_4"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rectangle" />

                <ImageView
                    android:id="@+id/rect1_5"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rectangle" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/aa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/a1"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:background="@drawable/man_up" />

                    <ImageView
                        android:id="@+id/a2"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:visibility="invisible"
                        android:background="@drawable/man" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/bb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/b1"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:visibility="invisible"
                        android:background="@drawable/man_up" />

                    <ImageView
                        android:id="@+id/b2"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:background="@drawable/man" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/cc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/c1"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:visibility="invisible"
                        android:background="@drawable/man_up" />

                    <ImageView
                        android:id="@+id/c2"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:background="@drawable/man" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/dd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/d1"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:visibility="invisible"
                        android:background="@drawable/man_up" />

                    <ImageView
                        android:id="@+id/d2"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:background="@drawable/man" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/e1"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:visibility="invisible"
                        android:background="@drawable/man_up" />

                    <ImageView
                        android:id="@+id/e2"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:background="@drawable/man" />
                </FrameLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/match_bar_btm"
            android:layout_below="@id/opop"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4.8dp">
            <com.gigamole.library.ShadowLayout
                app:sl_shadow_distance="3.8dp"
                app:sl_shadow_radius="3.8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <jiguang.chat.view.ScrollControlViewPager
                    android:id="@+id/match_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true">

                </jiguang.chat.view.ScrollControlViewPager>

            </com.gigamole.library.ShadowLayout>

        </RelativeLayout>
    </RelativeLayout>
</jiguang.chat.view.MatchView>